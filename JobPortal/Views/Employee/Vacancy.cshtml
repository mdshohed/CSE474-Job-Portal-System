@model IEnumerable<JobPortal2.Models.JobPost>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/__LayoutForEmployee.cshtml";

}



<div class="row mt-3">
    <div class="col-lg-12">
        <h1 class="page-header">List of Vacancies  <a href="@Url.Action("Create", "Employee")" class="btn btn-primary btn-xs">  <i class="fa fa-plus-circle fw-fa"></i> Add Job Vacancy</a>  </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<form action="controller.php?action=delete" Method="POST">
    <div class="table-responsive">
        <table id="dash-table" class="table table-striped table-bordered table-hover" style="font-size:12px" cellspacing="0">

            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JobTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vacancy)
                    </th>
                    <td>
                        @Html.DisplayNameFor(model => model.Salary)
                    </td>
                    <th>
                        @Html.DisplayNameFor(model => model.JobNature)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Specialization)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastDate)
                    </th>
                    <th width="10%" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>


                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.JobTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vacancy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JobNature)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Specialization)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastDate)
                        </td>
                        <td align="center">
                            <a title="Edit" href="@Url.Action("Edit","Employee",new { id = item.JobId })" class="btn btn-primary btn-xs  ">  <span class="fa fa-edit fw-fa"></a>
                            <a href="@Url.Action("Details", "Employee", new { id = item.JobId})" class="btn btn-main btn-next-tab bg-danger text-white">View Job!</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
</form>

<div class="table-responsive">
