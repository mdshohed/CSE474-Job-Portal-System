@model IEnumerable<JobPortal2.Models.User>

@{
    ViewBag.Title = "ManageUsers";
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
}


<div class="row mt-3">
    <div class="col-lg-12">
        <h1 class="page-header">List of Employee's  <a href='@Url.Action("CreateUser", "Admin")' class="btn btn-primary btn-xs  ">  <i class="fa fa-plus-circle fw-fa"></i> Add New Employee</a>  </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>


<form class="wow fadeInDownaction" action="controller.php?action=delete" Method="POST">
    <table id="dash-table" class="table table-striped  table-hover table-responsive" style="font-size:12px" cellspacing="0">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role.RoleName)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
               
                <td width="5%" align="center">
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.RoleName)
                </td>
                @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.UserId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
                </td>*@
                <td align="center">
                    <a href="@Url.Action("UserEdit", "Admin", new { id = item.UserId })" title="Edit" class="btn btn-info btn-xs  ">
                        <span class="fa fa-edit fw-fa"></span>
                    </a>
                    <a href="@Url.Action("UserDelete", "Admin", new { id = item.UserId })" title="Delete" class="btn btn-danger btn-xs  ">
                        <span class="fa fa-trash-o fw-fa"></span>
                    </a>
                </td>
            </tr>
            }
        </tbody>

</table>


</form>