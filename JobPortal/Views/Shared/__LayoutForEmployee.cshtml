<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Job Finder</title>
    <link href="~/Content/Style/myStyle.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />*@
    <!-- Bootstrap 5.2.1 -->
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="~/Content/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
    <link href="~/Content/dist/css/skins/_all-skins.min.css" rel="stylesheet" />

</head>
<body class="hold-transition skin-blue fixed sidebar-mini">
    <header class="main-header">
        <a class="logo"> <span class="logo-lg"><b>Job Finder</span></a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                @*<span class="sr-only">Toggle navigation</span>*@
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <li class="dropdown user user-menu">
                        @if (!User.Identity.Name.Equals(""))
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <button type="button" class="btn btn-outline-danger">@Html.ActionLink("Logout", "Logout", "Admin", new { @class = "button" })</button>
                            </ul>
                        }
                        <ul class="dropdown-menu">
                            <!-- Menu Body -->
                            <li class="user-body">
                                <div class="row">
                                    <div class="col-xs-4 text-center">
                                        <a href="#">Followers</a>
                                    </div>
                                    <div class="col-xs-4 text-center">
                                        <a href="#">Sales</a>
                                    </div>
                                    <div class="col-xs-4 text-center">
                                        <a href="#">Friends</a>
                                    </div>
                                </div>
                                <!-- /.row -->
                            </li>
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="#" class="btn btn-default btn-flat">Profile</a>
                                </div>
                                <div class="pull-right">
                                    <a href="#" class="btn btn-default btn-flat">Sign out</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <!-- Control Sidebar Toggle Button -->
                    @*<li>
                            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                        </li>*@
                </ul>
            </div>
        </nav>
    </header>

    <!-- Left side column. contains the sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">

            <!-- search form -->
            <form action="#" method="get" class="sidebar-form">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Search...">
                    <span class="input-group-btn">
                        <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
            <!-- /.search form -->
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li class="header">Employee Deshboard</li>
                <li class="treeview">
                    @*<a href="#">
                            <i class="fa fa-dashboard"></i> <span>@Html.ActionLink("Dashboard", "Index", "Admin")</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>*@
                    @Html.ActionLink(" Dashboard", "Index", "Admin", new { @class = "fa fa-dashboard" })
                </li>

                <li>
                    @Html.ActionLink(" AddJob", "Create", "Admin", new { @class = "fa fa-th" })
                    @*<small class="label pull-right bg-green"></small>*@
                </li>

                <li class="treeview">
                    @Html.ActionLink(" Vacancy", "Vacancy", "Admin", new { @class = "fa fa-laptop" })
                    @*<i class="fa fa-angle-left pull-right"></i>*@
                </li>

                <li class="treeview">
                    @*<i class="fa fa-table"></i> <span>@Html.ActionLink("Applications", "Index", "Admin")</span>*@
                    @Html.ActionLink(" Applicants", "Applicants", "Admin", new { @class = "fa fa-table" })
                    @*<i class="fa fa-angle-left pull-right"></i>*@
                </li>
              
            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- =============================================== -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container">
                @RenderBody()
            </div>

        </section>
    </div>
    <!-- /.content-wrapper -->
    <!-- footer-->
    <footer>
        <p class="text-center">Copyright &copy; @DateTime.Now.Year Job Finder. All rights reserved.</p>
    </footer>


    <!-- Add the sidebar's background. This div must be placed immediately after the control sidebar -->
    <div class="control-sidebar-bg"></div>

    <!-- jQuery 2.1.4 -->
    <script src="~/Content/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="~/Content/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Content/plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/dist/js/app.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Content/dist/js/demo.js"></script>

    <script src="~/Content/js/bootstrap.min.js"></script>
</body>

</html>
